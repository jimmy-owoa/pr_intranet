<section class="section">
  <h5 class="section-header">Usuarios</h5>
  <div class="table-responsive">
    <table class='table table-sm'>
      <thead>
      <tr>
        <th></th>
        <th>Nombre(s)</th>
        <th>Apellido(s)</th>
        <th>Email</th>
        <th>Fecha de nacimiento</th>
        <th>Anexo</th>
        <th>Activo</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.image.attachment.present? %>
                <%= image_tag(user.image.attachment.variant(resize: '40x40!').processed, class: 'rounded-circle border border-secondary') %>
              <% end %>      
            </td>
            <td><%= user.name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.birthday.present? ? custom_date_no_hour(user.birthday) : '' %></td>
            <td><%= user.annexed %></td>
            <td><%= user.active? ? 'Si' : 'No' %></td>
            <td><%= link_to t('.show', :default => t("helpers.links.show")), admin_user_path(user), class:'btn btn-primary btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

