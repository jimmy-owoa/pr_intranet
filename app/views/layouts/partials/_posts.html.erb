<section class="section">
  <h5 class="section-header">Noticias</h5>
  <div class="table-responsive">
    <table class='table table-sm'>
      <thead>
      <tr>
        <th>TÃ­tulo</th>
        <th>Link</th>
        <th>Estado</th>
        <th>Tipo</th>
        <th>Destacado</th>
        <th>Acciones</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% environment = Rails.env.development? ? 'http://localhost:8080' : 'http://intranet-security-qa-v1.s3-website.us-east-2.amazonaws.com' %>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <%# <td><%= post.slug %></td>
            <td><%= link_to "#{post.slug}", "#{environment}/#/noticias/#{post.slug}", target: "_blank" %></td>
            <td><%= post.status %></td>
            <td><%= post.post_type %></td>
            <td><%= post.important.present? ? 'Si' : 'No' %></td>
            <%# <td><%= raw post.content.truncate(50)</td> %>
            <td><%= link_to t('.show', :default => t("helpers.links.show")),
            admin_post_path(post), :class => 'btn btn-primary btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-12 center">
      <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</section>