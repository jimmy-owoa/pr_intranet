<section class="section">
  <h5 class="section-header">Noticias</h5>
  <div class="table-responsive">
    <table class='table table-sm'>
      <thead>
      <tr>
        <th>TÃ­tulo</th>
        <th>Link</th>
        <th>Contenido</th>
        <th>Acciones</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.slug %></td>
            <td><%= raw post.content.truncate(100) %></td>
            <td><%= link_to t('.show', :default => t("helpers.links.show")),
            admin_post_path(post), :class => 'btn btn-primary btn-sm' %></td>       
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-12 center">
      <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>    
  </div>
</section>