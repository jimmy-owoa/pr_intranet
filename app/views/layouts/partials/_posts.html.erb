<section class="section">
  <h5 class="section-header">Noticias</h5>
  <div class="table-responsive">
    <table class='table table-sm'>
      <thead>
      <tr>
        <th>Título</th>
        <th>Link</th>
        <th>Contenido</th>
        <th>Estado</th>
        <th>Publicado</th>
        <th>Categoría</th>
        <th>Visibilidad</th>
        <th>Creado</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.slug %></td>
            <td><%= raw post.content.truncate(30, separator: ' ') %></td>
            <td><%= post.status %></td>
            <td><%= post.published_at.present? ? custom_date(post.published_at) : '' %></td>
            <td><%= post.term_id %></td>
            <td><%= post.visibility %></td>
            <td><%= custom_date(post.created_at) %></td>  
            <td><%= link_to t('.show', :default => t("helpers.links.show")),
            admin_post_path(post), :class => 'btn btn-default btn-xs' %></td>       
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>