<section class="section">
  <h5 class="section-header">Noticias</h5>
    <div class="card">
      <table class='table'>
      <thead>
      <tr>
        <th>TÃ­tulo</th>
        <th>Link</th>
        <th>Estado</th>
        <th>Tipo</th>
        <th>Destacado</th>
        <th>Acciones</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <%# <td><%= post.slug %></td>
            <td><%= link_to "#{post.slug}", "#{get_frontend_url}/noticias/#{post.slug}", target: "_blank" %></td>
            <td><%= post.status %></td>
            <td><%= post.post_type %></td>
            <td><%= post.important.present? ? 'Si' : 'No' %></td>
            <%# <td><%= raw post.content.truncate(50)</td> %>
            <td><%= link_to t('.show', :default => t("helpers.links.show")),
            admin_post_path(post), :class => 'btn btn-primary btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-12 center">
      <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</section>