<section class="section">
  <h5 class="section-header">Beneficios</h5>
    <div class="card">
      <table class='table'>
        <thead>
          <tr>
            <th>Alias</th>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @benefits.each do |benefit| %>
            <tr>
              <td><%= benefit.alias %></td>
              <td><%= benefit.title %></td>
              <td><%= link_to t('.show', :default => t("helpers.links.show")),
            admin_benefit_path(benefit), :class => 'btn btn-primary btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 center">
      <%= will_paginate @benefits, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
</section>
