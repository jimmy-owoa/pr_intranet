* {
  margin: 0;
  padding: 0;
  font-family: "Roboto", sans-serif;
  box-sizing: border-box;
}
.search_position {
  position: absolute;
  left: 885px;
  padding-right: 0px;
  height: 30px;
}
.container {
  position: relative;
  max-width: 1140px;
}
nav {
  position: inherit;
  width: 100%;
  background: #fafafa;
  font-size: 16px;
  /* overflow: hidden;
  position: fixed; 
  top: 0; 
  width: 100%; */
}

/* first stage */

nav > ul {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100%;
  margin: 0 auto;
  padding: 0;
  height: 50px;
  border-bottom: 1px solid#ddd;
  margin-bottom: 5px;
  z-index: 9;
}

nav a {
  display: block;
  color: black;
  text-decoration: none;
}

nav ul li {
  color: #fff;
  list-style: none;
  transition: 0.15s;
}

nav > ul > li > a {
  padding: 15px 25px;
}

nav ul > li.submenu:hover > a:after {
  margin-top: 2px;
  border-top: 5px solid transparent;
  border-bottom: 5px solid green;
}

nav > ul > li:hover {
  /* background: red; */
  border-bottom: 5px solid green;
}

/* second stage (the mega-menu) */

nav ul.megamenu {
  position: absolute;
  display: flex;
  flex-wrap: wrap;
  width: 1092px;
  top: -9999px;
  left: 0;
  padding: 20px 10px 0 10px;
  background: #fff;
  text-align: left;
  /* border-top: 5px solid green; */
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.5);
  z-index: 1;
  transition-delay: 0.15s;
}

nav ul li:hover ul.megamenu {
  top: 100%;
}

/* third stage (child-menus in the mega-menu) */

nav ul.megamenu ul {
  width: 20%;
  margin-bottom: 10px;
  color: #000;
  box-shadow: none;
}

nav ul.megamenu h4 {
  margin-bottom: 5px;
  text-transform: uppercase;
}

nav ul.megamenu ul li {
  display: block;
}

nav ul.megamenu ul li a {
  margin-top: 10px;
  transition: 0.2s;
  color: #000;
}

nav ul.megamenu ul li a:hover {
  color: #4096ee;
}
