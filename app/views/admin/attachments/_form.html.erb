<%= f.error_notification %>
<div class="card">
  <div class="card-body">
    <div class="form-inputs">
      <div class="row">
        <div class="col-md-4 card p-4 wrapper" >
          <input type="checkbox" id="select_all" class="form-check-input"/> <strong>Seleccionar todas</strong>
          <div class="form-group">
            <div class= 'scrollDivPost categories'>
              <%= f.association :terms, collection: @categories, as: :check_boxes, class: 'custom-control-input', label: false %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <%= f.label 'Tags excluyentes' %>
          <%= select_tag :excluding_tags, options_for_select(@excluding_tags.map{|i| [i.name, i.id]}), multiple: true, class:' form-control string optional' %>
        </div>
        <div class="col-md-4">
          <%= f.label 'Tags incluyentes' %>
          <%= select_tag :inclusive_tags, options_for_select(@inclusive_tags.map{|i| [i.name, i.id]}), multiple: true, class:' form-control string optional' %>
        </div>
        <br />
        <div class="col-md-12 form-group">
            <%= file_field_tag 'attachment[attachment][]', id: "fileinputuploader", class: 'file-loading', multiple: true %>
        </div>
        <div class="col-4 col-sm-5">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= show_media @attachment if params['action'] == 'edit' %>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%# <%= f.input :name, required: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br />
    <%# <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.button :submit, class: 'btn btn-primary'%>
    <%# </div> %>
  </div>
</div>


