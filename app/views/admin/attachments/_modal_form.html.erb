<div class="" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Im√°genes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="tab-v2">
          <ul class="nav nav-tabs" id="myTab">
            <li class="nav-item pill-tabs"><a href="#select_image" data-toggle="tab" id="image_picker">Seleccionar desde Biblioteca</a></li>
            <%# <li class="nav-item pill-tabs"><a href="#upload_image" data-toggle="tab" id="image_upload">Subir nueva imagen</a></li> %>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade in" id="upload_image">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <%= file_field_tag :main_image_select%>
                <button type="button" class="btn btn-primary" id="btn_select">Seleccionar imagen</button>
              </div>
            </div>
            <div class="tab-pane fade in" id="select_image">
                <div class="row justify-content-center">
              <div class="col-12">
                <%= text_field_tag :search, params[:search], id: 'search_att', placeholder: 'Buscar imagen' %>
                <%= submit_tag "Buscar", :name => nil, id: 'btn_search', class: 'btn btn-primary btn-sm' %><br /><br />
                <%= select_tag :attachment, options_for_select(@image_list.map{|i| [i.name, i.id, {'data-img-src'=> url_for(i.thumb)}]}), class: 'show-html', id: 'image-picker_att' %>
              </div>
            </div>
              <button type="button" id="selection-image" class="btn btn-primary" style="float:right">Seleccionar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $("#btn_select").click(function() {
    if ($("#main_image_select")[0].files[0] != null){
      let name = $("#main_image_select")[0].files[0].name;
      let value = $("#main_image_select")[0].value;
      if (name.length > 1) {
        $("#main_image, #main_image_nil").text(name);
        alert("Imagen principal seleccionada")
      }
    }
    else
    {
      alert("No has seleccionado ninguna imagen principal")
    }
    $("#main_image_modal").modal("toggle");

  });
</script>

