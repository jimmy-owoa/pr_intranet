<section class="section">
  <h1 class="section-header">Archivo: <%= @attachment.id %></h1>
  <div style='width: 400px; height: 400px;'>
    <%= show_media @attachment %>
  </div>
  <br><br>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                admin_attachments_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_attachment_path(@attachment), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_attachment_path(@attachment),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</section>
