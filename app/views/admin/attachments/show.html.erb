<section class="section">
  <h1 class="section-header">Medio: <%= @attachment.name? ? @attachment.name : @attachment.id %></h1>
</section>
  <div class="row">
    <div class="container card">
      <div class="col-md-12" align="center">
        <div class="pt-4">
          <%= show_media @attachment %>
        </div><br />
        <h4><%= @attachment.name? ? @attachment.name : @attachment.id %></a></h4>
        <%= link_to 'Ruta', rails_blob_url(@attachment.attachment), target: "_blank"%><br />
        <b id="link"><%= rails_blob_url(@attachment.attachment) %></b>
        <br />
        <button class="clipboard-btn" data-clipboard-action="copy" data-clipboard-target="#link">
            Copiar
        </button>
      </div>
        <div align="center"><br />
          <%= link_to t('.back', :default => t("helpers.links.back")),admin_attachments_path, :class => 'btn btn-primary'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),edit_admin_attachment_path(@attachment), :class => 'btn btn-primary' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),admin_attachment_path(@attachment),:method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro??')) }, :class => 'btn btn-danger' %>
        </div><br />
    </div>
  </div>
  <br><br>