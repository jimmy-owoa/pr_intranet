<div class="" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Video</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="tab-v2">
          <div class="tab-content">
            <div class="tab-pane active" id="select_image">
              <div class="row justify-content-center">
                <div class="col-12">
                  <%= text_field_tag :search, params[:search], id: 'search_video', placeholder: 'Buscar Video' %>
                  <%= submit_tag "Buscar", :name => nil, id: 'btn_search', class: 'btn btn-primary btn-sm' %><br /><br />
                  <%= select_tag :attachment, options_for_select(@video_list.map{|i| [i.name, i.id, {'data-img-src'=> url_for(i.attachment.preview(resize: "x50")), 'data-img-label' => i.name[0..10]+"...", 'data-img-alt' => i.name}]}), class: 'show-html', id: 'image_picker_video' %>
                </div>
              </div>
              <%= js_will_paginate @video_list %>
              <button type="button" id="selection_video" class="btn btn-primary" style="float:right">Seleccionar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>