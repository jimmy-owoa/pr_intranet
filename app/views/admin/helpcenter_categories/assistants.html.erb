<div class="container">
  <section class="section">
    <h2 class="section-header"><%= @category.name %></h2>

    <div class="container card">
      <div class="col-md-12" align="center">
        <h4>Assistentes:</h4>
        <div class="table-responsive-md">
          <table class="table table-hover">
            <thead class="thead">
              <tr>
                <th><%= "Nombre" %></th>
                <th><%= "Promedio tiempo" %></th>
              </tr>
            </thead>
            <tbody>
              <% @category.assistants.order(:id).each do |assistant| %>
                <tr>
                  <td><%= assistant.full_name %></td>
                  <td><%= assistant.average_time %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="container" align="center">
      <%= link_to t("helpers.links.back"), admin_helpcenter_categories_path, :class => 'btn btn-primary'  %>
      <%= link_to t("helpers.links.edit"), edit_admin_helpcenter_category_path(@category), :class => 'btn btn-primary' %>
    </div>
  </section>
</div>