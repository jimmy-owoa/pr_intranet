<section class="section">
  <h1 class="section-header"><%= "Usuarios" %></h1>
  <div class="card">
    <div class="table-responsive-md">
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th>Foto de perfil</th>
            <th>Nombre(s)</th>
            <th>Apellido(s)</th>
            <th>Email</th>
            <th>Anexo</th>
            <th>Activo</th>
            <th>Acciones</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.image.attachment.present? %>
                  <%= image_tag(user.image.attachment.variant(resize: '40x40!').processed, class: 'rounded-circle border border-secondary') %>
                <% end %>      
              </td>
              <td><%= user.name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.annexed %></td>
              <td><%= user.active? ? 'Si' : 'No' %></td>
              <td> 
                <%= link_to t('.show', :default => t("helpers.links.show")), admin_user_path(user), :class => 'btn btn-success btn-sm'  %>
                <% if current_user.has_role? :super_admin %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(user), :class => 'btn btn-primary btn-sm' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_post_path(user),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },:class => 'btn btn-sm btn-danger' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </div>
    </div>
  <%= link_to "Nuevo", new_admin_user_path, :class => 'btn btn-primary' %>
  </div>
</section>
