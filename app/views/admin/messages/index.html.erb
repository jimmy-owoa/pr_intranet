<%- model_class = General::Message -%>
  <section class="section">
    <h1 class="section-header"><%= "Mensajes" %></h1>
    <%= link_to "Nuevo", new_admin_message_path, :class => 'btn btn-primary btn-sm' %>
    <div class="card">
      <div class="table-responsive-md">
        <table class="table table-hover">
          <thead class="thead">
            <tr>
              <th><%= 'Título' %></th>
              <th><%= 'Tipo' %></th>
              <th><%= 'Acciones' %></th>
            </tr>
          </thead>
          <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td><%= link_to message.title, admin_message_path(message) %></td>
                <td><%= message.get_name_message_types %></td>
                <td>
                  <%= link_to t('.show', :default => t("helpers.messages.show")),
                              admin_message_path(message), :class => 'btn btn-success btn-xs' %>
                  <%= link_to t('.edit', :default => t("helpers.messages.edit")),
                              edit_admin_message_path(message), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to 'Deshabilitar',
                              admin_message_path(message),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.messages.confirm", :default => '¿Estás seguro??')) },
                              :class => 'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
        </div>
      </div>
    </div>
  </section>
