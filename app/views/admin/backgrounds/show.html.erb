<section class="section">
  <h1 class="section-header">Nombre: <%= @background.name %></h1>
  <div class="card">
    <div class="card-body center">
      <p id="notice"><%= notice %></p>
      <div class="col-12">
        <p>Nombre del fondo: <%= @background.name %></p>
      </div>
      <% if @background.image.attached? %>
        <div class="col-12">
          <%= "Link del archivo: #{root_url + url_for(@background.image)}"%>
        </div>
        <div class="col-12">
          <%=link_to "Descargar archivo", root_url + url_for(@background.image), class: 'btn btn-success btn-block'%>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to t('.back', :default => t("helpers.links.back")), admin_backgrounds_path, :class => 'btn btn-primary'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_background_path(@background), :class => 'btn btn-primary' %>
  </div>  
</section>
