<%- model_class = Survey::Answer -%>
  <section class="section">
    <h1 class="section-header"><%= "Encuestas respondidas" %></h1>
    <div class="card">
      <div class="table-responsive-md">
        <table class="table table-hover">
          <thead class="thead">
            <tr>
              <th><%= 'ID' %></th>
              <th><%= 'Nombre Encuesta' %></th>
              <th><%= 'Fecha de creaciÃ³n' %></th>
              <th><%= 'Acciones' %></th>
            </tr>
          </thead>
          <tbody>
            <% @surveys.each do |survey| %>
              <tr>
                <td><%= survey.id %></td>
                <td><%= survey.name %></td>
                <td><%= custom_date_no_hour(survey.created_at)  %></td>
                <td>
                  <% if survey.questions.first.present? && survey.questions.first.answers.present? %>
                    <%= link_to t('.show', :default => t("helpers.links.show")), admin_answer_path(survey.questions.first.answers.first.id), :class => 'btn btn-info btn-xs' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
        </div>
      </div>
    </div>
  </section>