<%= f.error_notification %>
<div class="form-row">
  <div class="form-group card p-4 col-md-8">
    <div class="row" >
      <div class="col-md-4">
        <%= f.input :child_name, label: "Nombre del recién nacido", required: true, autofocus: true  %>
      </div>
      <div class="col-md-4">
        <%= f.input :child_lastname, label: "Apellido Paterno", required: true %>
      </div>
      <div class="col-md-4">
        <%= f.input :child_lastname2, label: "Apellido Materno", required: true %>
      </div>
      <div class="col-md-6">
        <% if @user.present? %>
          <%= f.label "Padre/Madre" %> <br>
          <%= @user.full_name %>
        <% else %>
          <% selected_value = nil %>
          <%= f.label :user, "Usuario", class: 'form-control-label string required' %><br>
          <%= select_tag :user_id, options_for_select(@users.sort, selected_value), include_blank: true, multiple: false %><br/>
        <% end %>
      </div>
      <div class="col-md-4 col-sm-4">
        <div class="input-group date" id="birthday" data-target-input="nearest">
          <% if @birth.try(:birthday).present? %>
            <label style="position: absolute; top: 9px;">Día de nacimiento</label>
            <%= f.text_field :birthday, label: 'Hola', class: 'form-control datetimepicker-input', value: @birth.try(:birthday).strftime("%d-%m-%Y %H:%M"), 'data-target' => '#birthday'%>
          <% else %>
            <%= f.text_field :birthday, class: 'form-control datetimepicker-input', 'data-target' => '#birthday', placeholder: "Día de nacimiento", label: false, required: true %>
          <% end %>
          <div class="input-group-append" data-target="#birthday" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row align-items-center">
          <div class="col-md-3">
            <%= f.radio_button :gender, true, class: 'radio-inline'%>
          </div>
          <div class="col-md-9">
            Masculino
          </div>
          <div class="col-md-3">
            <%= f.radio_button :gender, false, class: 'radio-inline'%>
          </div>
          <div class="col-md-9">
            Femenino
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <% if f.object.new_record? %>
          <%= f.check_box :approved, checked: false %>
          <%= f.label 'Aprobado'%>
        <% else %>
          <%= f.check_box :approved, checked: true, hidden: true%>
        <% end %>
      </div>
      <div class="col-md-2">
        <div class="custom-control custom-checkbox pt-4">
          <%= f.check_box :is_public, class:'custom-control-input' %>
          <%= f.label 'Es público', class: 'custom-control-label', for: 'birth_is_public'%>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card p-2">
      <h5 class="text-center">Foto Aprobada</h5>
      <div class="card border-secondary center mb-12" style="max-width: 18rem;">
        <div class="card-body text-secondary border border-primary rounded">
          <% if @birth.photo.attachment.nil? || !@birth.permitted_image %>
            <%= image_tag("birth.png", height: "150px", style: "object-fit: cover;") %>
          <% else %>
            <%= image_tag(@birth.photo, class: 'center') %>
          <% end %>
        </div>
      </div>
      <div class=" col-md-12">
        <div class="col-md-12">
          <%= f.file_field :photo, multiple: false, as: :file, input_html: { accept:'image/*' }, onchange: "validateImage('birth_photo')"%>
        </div>
      </div>
    </div>
  </div>
  <% if @birth.photo.attachment %>
    <% if !@birth.permitted_image %>
      <div class="card p-3">
        <div class="row">
          <div class="col-sm-10 pull-left">
            Foto por aprobar
          </div>
        </div>
        <br />
        <div class="row text-center" >
          <div class="col-md-2 approved">
            <figure>
              <a data-toggle="modal" data-target="#modalShow"><%= image_tag @birth.photo.variant(resize: '350x200>'), class: 'image_attach' %></a>
              <figcaption>
                <%= check_box_tag "permissions[]", @birth.photo.id -%>
              </figcaption>
            </figure>
          </div>
        </div>
      </div>
    <% end %>
    <div class="">
      <% if @birth.permitted_image %>
        <div class="card pl-3">
          <div class="row">
            <div class="col-sm-10">
              Foto Aprobada
            </div>
          </div>
          <br />
          <div class="row" >
            <div class="col-md-2">
              <figure>
                <a data-toggle="modal" data-target="#modalShow"><%= image_tag @birth.photo.variant(resize: '350x200>'), class: 'image_attach' %></a>
                <figcaption><%= link_to 'Borrar', delete_image_admin_birth_path(@birth.photo.id), method: :delete, data: { confirm: '¿Esta segura(o) que desea eliminar este elemento?' },:class => 'btn btn-sm btn-danger'%></figcaption>
              </figure>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12 mb-5">
    <div class="col-md-4">
      <%= f.submit 'Guardar', class: 'btn btn-success' %>
      <% if @birth.id.present? %>
        <%= link_to "Aprobar", admin_birth_path(@birth, birth: {approved: true}) , method: :put, :class => 'btn btn-primary'%>
        <%= link_to 'Rechazar',
          admin_birth_path(@birth, birth: {approved: false}), method: :put,
          method: :delete,
          data: { title: '¿Esta segura(o) que desea rechazar este elemento?', confirm: 'Confirmar' },
          class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
