<div class="container">
  <section class="section">
    <h2 class="section-header"><%= @birth.child_fullname %></h2>
  </section>
  <div class="row title_form">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <h4>Nombre del nacido:  <%= @birth.child_fullname %></h4>
          <p><strong> Nombre del Padre/Madre: </strong> <%= @birth.user.full_name %></p>
          <p><strong> Día de nacimiento: </strong> <%= custom_date_no_hour(@birth.birthday) %></p>
          <p class="card-text">
            <b>Creado:</b> <%= custom_date(@birth.created_at)%>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <% if @birth.photo.attachment.present? %>
            <% if @birth.permitted_image %>
              <%= image_tag @birth.photo.attachment.variant(resize: '250x200>'), class: 'image_attach'%>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to t('.back', :default => t("helpers.links.back")), admin_births_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_birth_path(@birth), :class => 'btn btn-primary' %>
  <%= link_to 'Eliminar', admin_birth_path(@birth),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },:class => 'btn btn-danger' %>
</div>
