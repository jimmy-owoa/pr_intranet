<div class="container">
  <section class="section">
    <h2 class="section-header"><%= @birth.child_fullname %></h2>
  </section>
  <div class="row title_form">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <h4>Nombre del nacido:  <%= @birth.child_fullname %></h4>
          <p><strong> Nombre de la madre: </strong> <%= @birth.full_name_mother %></p>
          <p><strong> Nombre del padre: </strong> <%= @birth.full_name_father %></p>
          <p><strong> Sexo: </strong> <%= @birth.get_gender %></p>
          <p class="card-text">
            <b>Creado:</b> <%= custom_date(@birth.created_at)%>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <%# <% if @birth.images.attachments.present?%>
          <% if @birth.permitted_images.present? %>
            <% @birth.permitted_images.each do |image| %>
              <%= image_tag image.variant(resize: '250x200>'), class: 'image_attach'%>
            <% end %>
          <% else %>
            <img src="https://webiconspng.com/wp-content/uploads/2017/09/Stork-PNG-Image-40980.png" height="230px"  />
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to t('.back', :default => t("helpers.links.back")), admin_births_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_birth_path(@birth), :class => 'btn btn-primary' %>
  <%= link_to 'Deshabilitar', admin_birth_path(@birth),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },:class => 'btn btn-danger', onclick: 'confirm_data()' %>
</div>
