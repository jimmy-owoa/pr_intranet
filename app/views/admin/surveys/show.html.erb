<div class="form-group row">
  <div class="col-md-10 center card p-4">
    <div class="col-md-10 center">  
      <%= image_tag @survey.image.variant(resize: '360x300>') if @survey.image.attached? %><br />
      <h4><%= @survey.name %></h4><br>
      <% @survey.questions.each_with_index do |question, index| %>
        <h5><b>Pregunta <%= index + 1 %>: <%= question.title %></b><br>
        <%= question.description %>
        <%= load_option(question) %>
        <% if question.question_type == 'MÃºltiple' %>
          <% question.options.each do |option| %>
            <br>
            <input type="checkbox" name="#{option.title}" value="#{option.id}"><%= option.title %>
          <% end %> 
        <% end %>
        <% if question.question_type == 'Simple' %>
          <% question.options.each do |option| %>
            <br>
            <input type="radio" name="#{option.title}" value="#{option.id}"><%= option.title %>
          <% end %> 
        <% end %>
        <br><hr>
      <% end %>
    </div>
    <div class='col-md-10 center'>
      <% environment = Rails.env.development? ? 'http://localhost:8080' : 'http://intranet-security-qa-v1.s3-website.us-east-2.amazonaws.com/' %>
      <%= link_to "Link de la encuesta", "#{environment}/encuestas/#{@survey.slug}", target: "_blank" %><br />
    </div>
      <%= link_to t('.back', :default => t("helpers.links.back")), admin_surveys_path, :class => 'btn btn-primary'  %>

  </div>
</div>

