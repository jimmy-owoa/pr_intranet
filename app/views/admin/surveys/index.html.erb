<%- model_class = Survey::Survey -%>
  <section class="section">
    <h1 class="section-header"><%= "Encuestas" %></h1>
    <div class="card">
      <div class="table-responsive-md">
        <table class="table table-hover">
          <thead class="thead">
            <tr>
              <th><%= 'Tipo'%></th>
              <th><%= 'Título' %></th>
              <th><%= 'Respuestas' %></th>
              <th><%= 'Fecha Creación' %></th>
              <th><%= 'Acciones' %></th>
            </tr>
          </thead>
          <tbody>
            <% @surveys.each do |survey| %>
              <tr>
                <td><%= survey.get_name_survey_type unless survey.survey_type.nil?  %></td>
                <td><%= survey.name %></td>
                <td><%= survey.get_answer_count %></td>
                <td><%= custom_date_no_hour(survey.created_at)  %></td>
                <td>
                  <% environment = Rails.env.development? ? 'http://localhost:8080' : 'http://intranet-security-qa-v1.s3-website.us-east-2.amazonaws.com' %>
                  <%= link_to "Ver cliente", "#{environment}/#/encuestas/#{survey.slug}", target: "_blank", class: 'btn btn-success btn-sm' %>
                  <%= link_to "Ver", admin_survey_path(survey), class: 'btn btn-success btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
        </div>
      </div>
    <%= link_to "Nueva", new_admin_survey_path, :class => 'btn btn-primary' %>
    </div>
  </section>
