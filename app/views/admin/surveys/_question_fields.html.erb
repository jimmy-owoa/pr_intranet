<div class="nested-fields col-md-12 card p-4">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-11">
          <%= f.input :title, input_html: { class: "col-md-7" } %>
        </div>
        <div class="col-md-1" style="font-size: 25px;"><%= link_to_remove_association '<i class="fas fa-times float-right"></i>'.html_safe, f %></div>
      </div>
    </div>
    <div class="col-md-11">
      <%= f.input :description, input_html: { class: "col-md-7" } %>
    </div>
    <div class="col-md-11">
      <%= f.input :optional, as: :boolean, boolean_style: :inline, input_html: { class: "col-md-7", include_hidden: false } %>
    </div>
    <div class="col-md-11"></br>
      <%= f.input :question_type, collection: Survey::Question::QUESTION_TYPE, as: :select, input_html: { class: "col-md-7 select-question-type" } %>
      <div class="feedback" style="font-size: 12px; font-weight: 500; color: #868e96; font-style: italic;" id="lineal_message">
        <%= "Escala lineal es considerada desde 0 a 10" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 options">
      <%= f.simple_fields_for :options do |option_form|%>
        <%= render 'option_fields', f: option_form %>
      <% end %>
    </div>
  </div>
  <div class="text-right"><br />
    <%= link_to_add_association 'Agregar opciÃ³n', f, :options, class: 'btn btn-success', data: { association_insertion_node: '.options', association_insertion_method: :append } %>
  </div>    
</div>

<script>
 $(document).ready(function () {
  $('.select-question-type').on('change', function () {
    var selectedVal = $(this).val();
    if(selectedVal == "Escala lineal")
    {
      $("#lineal_message").show();
    }else
    {
      $("#lineal_message").hide();
    }
  });
});
</script>