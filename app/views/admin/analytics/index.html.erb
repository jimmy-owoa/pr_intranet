<div class="row">
  <div class="col-md-12"></br></br>
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Noticias</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Vistas</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <section class="section">
          <h1 class="section-header">Analítica</h1>
          <table class='table table-hover'>
            <thead>
              <tr>
                <th>Título</th>
                <th>Categoría</th>
                <th>Visitas</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td> <%= post[:title] %> </td>
                  <td> <%= post[:category].present? ? post[:category] : 'Sin categoría'%> </td>
                  <td> <%= post[:count] %></td>
                </tr>           
              <% end %>
            </tbody>
          </table>    
        </section>  
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <section class="section">
          <h1 class="section-header">Analítica</h1>        
          <table class='table table-hover'>
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Visitas</th>
              </tr>
            </thead>
            <tbody>
              <% @events.group_by(&:name).each do |name| %>
                <tr>
                  <td><%= name[0] %></td>
                  <td><%= Ahoy::Event.where(name: name[0]).size %></td>
                </tr>           
              <% end %>
            </tbody>
          </table>
        </section>  
      </div>
    </div>
  </div>
</div>