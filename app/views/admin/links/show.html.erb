<section class="section">
  <h1 class="section-header">Link: <%= @link.id %></h1>
  <div class="card">
    <h4>URL: <a href='<%= @link.url %>'><%= @link.url %></a></h4>
    <div style='width: 400px; height: 400px;'>
      <%=image_tag @link.image.variant(resize: "360x300>")%>
    </div>
  </div>
  <br><br>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                admin_links_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_link_path(@link), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_link_path(@link),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</section>
