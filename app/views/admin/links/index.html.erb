<%- model_class = General::Link -%>
  <section class="section">
    <h1 class="section-header"><%= "Links" %></h1>
    <div class="card">
      <div class="table-responsive-md">
        <table class="table table-hover">
          <thead class="thead">
            <tr>
              <th><%= 'ID' %></th>
              <th><%= 'Título' %></th>
              <th><%= 'Fecha Creación' %></th>
              <th><%= 'Acciones' %></th>
            </tr>
          </thead>
          <tbody>
            <% @links.each do |link| %>
              <tr>
                <td><%= link.title %></td>
                <td><%= custom_date_no_hour(link.created_at) %></td>
                <td>
                  <%= link_to t('.show', :default => t("helpers.links.show")),
                              admin_link_path(link), :class => 'btn btn-success btn-sm' %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_admin_link_path(link), :class => 'btn btn-primary btn-sm' %>
                  <%= link_to 'Deshabilitar',
                              admin_link_path(link),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro??')) },
                              :class => 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
        </div>
      </div>
    <%= link_to "Nueva", new_admin_link_path, :class => 'btn btn-primary' %>
    </div>
  </section>
