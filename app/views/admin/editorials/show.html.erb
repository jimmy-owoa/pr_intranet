<div class="container">
  <section class="section">
    <h2 class="section-header"><%= @editorial.name %></h2>
  </section>
  <div class="container">
    <div class="card">
      <% if @books.present? %>
        <div class="table-responsive-md">
          <table class="table table-hover">
            <thead class="thead">
              <tr>
                <th><%= 'Título' %></th>
                <th><%= 'Año publicación' %></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= book.title %></td>
                  <td><%= book.publication_year %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="row justify-content-center">
            <%= will_paginate @books, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
          </div>
        </div><!-- .table-responsive-md -->
      <% else %>
        <h5 class="card-title text-center p-1">No hay libros asociados a esta editorial</h5>
      <% end %>
    </div>

    <div class="text-center">
      <%= link_to t('.back', :default => t("helpers.links.back")), admin_editorials_path, :class => 'btn btn-primary btn-sm'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_editorial_path(@editorial), :class => 'btn btn-primary btn-sm' %>
      <%= link_to 'Eliminar', admin_editorial_path(@editorial),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },:class => 'btn btn-danger btn-sm' %>
    </div>
  </div>
</div>  