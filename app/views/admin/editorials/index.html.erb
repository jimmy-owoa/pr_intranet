<%- model_class = Library::Editorial -%>
<section class="section">
  <h1 class="section-header"><%= "Editoriales" %></h1>
  <%= link_to "Nueva", new_admin_editorial_path, class: 'btn btn-primary btn-sm mb-1' %>
  <div class="card">
    <div class="table-responsive-md">
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th><%= 'Nombre' %></th>
            <th><%= 'Acciones' %></th>
          </tr>
        </thead>
        <tbody>
          <% @editorials.each do |editorial| %>
            <tr>
              <td><%= editorial.name %></td>
              <td>				
								<%= link_to t('.show', :default => t("helpers.links.show")),
															admin_editorial_path(editorial), :class => 'btn btn-success btn-sm' %>
								<%= link_to t('.edit', :default => t("helpers.links.edit")),
															edit_admin_editorial_path(editorial), :class => 'btn btn-primary btn-sm' %>
								<%= link_to 'Eliminar',
															admin_editorial_path(editorial),
															:method => :delete,
															:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'EstÃ¡s seguro?')) },
															:class => 'btn btn-sm btn-danger'%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= will_paginate @editorials, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </div>
    </div>
  </div>
</section>