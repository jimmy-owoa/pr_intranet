<div class="container">
    <section class="section">
      <h2 class="section-header"><%= @category.name %></h2>
      <div class="container">
        <div class="row card">
          <div class="col-sm-12 mt-4">
            <p>
              <b><%= "Nombre" %>:</b> <%= @category.name %>
            </p>
          </div>
        </div>
      </div>
  
      <div class="container card">
        <div class="col-md-12" align="center">
          <h4>Sub-categor√≠as:</h4>
          <div class="table-responsive-md">
            <table class="table table-hover">
              <thead class="thead">
                <tr>
                  <th><%= "Nombre" %></th>
                </tr>
              </thead>
              <tbody>
                <% @category.subcategories.order(:id).each do |subcat| %>
                  <tr>
                    <td><%= subcat.name %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  
      <div class="container" align="center">
        <%= link_to t("helpers.links.back"), admin_expense_report_categories_path, :class => 'btn btn-primary'  %>
        <%= link_to t("helpers.links.edit"), edit_admin_expense_report_category_path(@category), :class => 'btn btn-primary' %>
      </div>
    </section>
  