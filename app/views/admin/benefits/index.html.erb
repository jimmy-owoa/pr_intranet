<%- model_class = General::Benefit -%>
<section class="section">
  <h1 class="section-header"><%= "Beneficios" %></h1>
  <div class="card">
    <div class="table-responsive-md">
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th><%= 'Alias' %></th>
            <th><%= 'Código' %></th>
            <th><%= 'Categoría' %></th>
            <th><%= 'Título' %></th>
            <th><%= 'Acciones' %></th>
          </tr>
        </thead>
        <tbody>
          <% @benefits.each do |benefit| %>
            <tr>
              <td><%= benefit.try(:alias) %></td>
              <td><%= benefit.code %></td>
              <td><%= benefit.benefit_type.name if benefit.benefit_type.present? %></td>
              <td><%= benefit.title %></td>
              <td>
                <%= link_to t("helpers.links.show"),
                              admin_benefit_path(benefit), :class => 'btn btn-success btn-xs' %>
                <%= link_to t("helpers.links.edit"),
                              edit_admin_benefit_path(benefit), :class => 'btn btn-primary btn-xs' %>
                <%= link_to t("helpers.links.destroy"),
                              admin_benefit_path(benefit),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.benefits.confirm", :default => '¿Esta segura(o) que desea eliminar este elemento?')) },
                              :class => 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%# will_paginate @benefits, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </div>
    </div>
  </div>
</section>
