<%- model_class = News::Post -%>
<section class="section">
  <%# <h1 class="section-header">Noticias</h1> %>
  <h1 class="section-header">Beneficios</h1>
  <%= link_to "Nueva", new_admin_post_path, class: 'btn btn-primary btn-sm mb-1' %>
  <div class="card">
    <div class="table-responsive-md">
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th><%= 'Título' %></th>
            <th><%= 'Tipo' %></th>
            <th><%= 'Estado' %></th>
            <th><%= 'Creación' %></th>
            <th><%= 'Publicación' %></th>
            <th><%= 'Acciones' %></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title.truncate(35), admin_post_path(post), title: post.title %></td>
              <td><%= post.post_type %></td>
              <td><%= post.status%></td>
              <td><%= custom_date_no_hour(post.created_at)  %></td>
              <td><%= custom_date_no_hour(post.published_at) %></td>
              <td>
                <% if post.post_type == "Video" %>
                  <%= link_to "Ver en intranet", "#{get_frontend_url}/momentos-security/#{post.slug}", target: "_blank", class: 'btn btn-success btn-sm' %>
                <% else %>
                  <%= link_to "Ver en intranet", "#{get_frontend_url}/noticias/#{post.slug}", target: "_blank", class: 'btn btn-success btn-sm' %>
                <% end %>

                <%= link_to t('.show', :default => t("helpers.links.show")),
                              admin_post_path(post), :class => 'btn btn-success btn-sm' %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_admin_post_path(post), :class => 'btn btn-primary btn-sm' %>
                <%= link_to 'Eliminar',
                              admin_post_path(post),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estás seguro?')) },
                              :class => 'btn btn-sm btn-danger'%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</section>
