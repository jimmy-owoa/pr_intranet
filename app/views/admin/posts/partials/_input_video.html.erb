<div id="post_input_video" class="card text-md-center pt-1">
  <div class="row">
    <div class="col-md-12">
      <h5 class="card-title">Video</h5>
      <% if @post.id.nil? %>
        <%= image_tag((asset_url('news_video_image.jpg')), id:'video_preview', :size => '180x120', :crop => :fill ) %>
        <b>
          <p>Subir Video</p>
        </b>
        <%= f.fields_for :file_video do |aa| %>
          <div class="form-group">
            <%= aa.file_field :attachment, class:'form-control-file', onchange:"readURLVideo(this);" %>
          </div>
        <% end %>
      <% else %>
        <% if @post.file_video.present? %>
          <%= image_tag url_for(@post.file_video.attachment.preview(resize: "x100")), id:'video_preview', size: '180x120' %>
          <div class="card-body">
            <%= link_to "Video seleccionado: #{@post.file_video.name}", admin_new_video_post_path(), 'data-toggle' => 'modal', 'data-target' => '#video_modal',id: 'video_image', remote: true, class: 'card-link'%>
          </div>
        <% else %>
          <%= image_tag(('/assets/news_video_image.jpg'), id:'video_preview', :size => '180x120', :crop => :fill) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>