<%= f.error_notification %>
<div class="col-md-12 row pb-4 pt-4" style="background-color: #FbFbFb; border-radius: 25px">
  <div class="wrapper col-md-9">
    <div class="form-group row">
      <div class="col-md-12">
        <%= f.input :title, required: true, autofocus: true, placeholder: 'Ingrese el título aquí', input_html: { class: "border border-dark" } %>
      </div>
      <div class="col-md-12">
        <%= f.input :extract, placeholder: 'Ingrese el extracto de la noticia aquí', input_html: { class: "border border-dark" }%>
      </div>
      <div class="col-md-12">
        <%= f.input :slug, placeholder: 'esto-es-un-enlace', input_html: { class: "border border-dark" } %>
      </div>
      <div class="col-md-12 col-sm-12 pb-4">
        <% selected_value = @post.profile_id || General::Profile.find_by_name("General").id %>
        <%= f.label "Perfilamiento" %>
        <%= f.select :profile_id, options_for_select(General::Profile.all.map{|profile| [profile.name, profile.id]}.sort, selected_value), multiple: false, class:' form-control string optional' %>
      </div>
      <div class="col-md-12" style="margin-bottom: 20px;">
        <%= f.label "Contenido" %>
        <%= f.text_area :content, class: 'tinymce' %>
        <%= tinymce height: "400", :relative_urls => false  %>
      </div>
    </div>
  </div>
  
  <div class="wrapper col-md-3">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%= render "admin/posts/partials/input_main_image", f: f  %>
      </div>
      <div class="col-md-12 col-sm-12">
        <%= render "admin/posts/partials/input_gallery", f: f  %>
      </div>
      <div class="col-md-12 col-sm-12">
        <%= render "admin/posts/partials/input_video", f: f  %>
      </div>
    </div>

    <div class="card text-md-center p-4 wrapper">
      <div class="row">
        <div class="col-md-12">
          <%= f.label "Tipo de noticia" %><br>
          <%= f.select :post_type, News::Post::TYPE.map { |m| m }, class:'post_type form-control' %>
        </div>
        <div class="col-md-12 mt-2">
          <%= f.label "Estado" %><br>
          <%= f.select :status, News::Post::STATUS, prompt: :translate, class:'post_type form-control' %>
        </div>
        <div class="col-md-12 mt-2">
          <%= f.label "Noticia destacada" %>
          <% if f.object.new_record? %>
            <%= f.check_box :important, class: 'post_type', checked: true %>
          <% else %>
            <%= f.check_box :important, class: 'post_type'%>
          <% end %>
        </div>
        <div class="col-md-12">
          <%= f.label "Aceptar comentarios" %>
          <%= f.check_box :accept_comments, class: 'post_type' %>
        </div>

        <div class="col-md-12">
          <%= f.label "Aceptar Me gusta" %>
          <%= f.check_box :accept_interactions, class: 'post_type' %>
        </div>

        <div class="col-md-12 mt-3">
          <%= render "admin/posts/partials/input_date", f: f  %>
        </div>

        <div class="col-md-12 mt-4">
          <% if @post.id.present? %>
            <%= f.submit "Actualizar Noticia", :class => 'btn btn-primary btn-block' %>
          <% else %>
            <%= f.submit "Crear Noticia", :class => 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('input,textarea').focus(function(){
      $(this).data('placeholder',$(this).attr('placeholder'))
              .attr('placeholder','');
    }).blur(function(){
      $(this).attr('placeholder',$(this).data('placeholder'));
    });
  
  });
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function(e) {
        $("#image_preview")
          .attr("src", e.target.result)
          .width(180)
          .height(120);
        $("#image_preview")[0].style.objectFit = "cover";
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  
  function readURLVideo(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function(e) {
        $("#video_image, #video_image_nil").text("Video seleccionado");
        $("#video_preview")
          .attr("src", "<%= image_path 'news_video_image.jpg' %>")
          .width(180)
          .height(120);
        $("#video_preview")[0].style.objectFit = "cover";
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  
  // Solución para cerrar "datetimepicker" al hacer click fuera.
  $(document).on('mouseup touchstart', function (e) {
  var container = $(".bootstrap-datetimepicker-widget");
    if (!container.is(e.target) && container.has(e.target).length === 0) {
      container.hide();
    }
  });
</script>
