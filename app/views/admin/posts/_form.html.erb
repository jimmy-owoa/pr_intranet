<%= f.error_notification %>
<div class="col-md-12 row pb-4 pt-4" style="background-color: #FbFbFb; border-radius: 25px">
  <div class="wrapper col-md-9">
    <div class="form-group row">
      <div class="col-md-12">
        <%= f.input :title, required: true, autofocus: true, placeholder: 'Ingrese el título aquí' %>
      </div>
      <div class="col-md-12">
        <%= f.input :extract, placeholder: 'Ingrese el extracto de la noticia aquí'%>
      </div>
      <div class="col-md-12">
        <%= f.input :slug, placeholder: 'esto-es-un-enlace' %>
      </div>
      <div class="col-md-12" style="margin-bottom: 20px;">
        <%= f.text_area :content, class: 'tinymce' %>
        <%= tinymce height: "900" %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="col-md-4 hidden">
        <%= f.association :main_image, collecion: @attachments, class: 'hidden'%>
      </div>
      <div class="col-md-4 hidden">
        <%= f.association :galleries, collecion: @galleries %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-md-center p-2 wrapper">
      <div class="form-group row">
        <div class="col-md-12">
            <%= f.label :post_type %><br>
            <%= f.select :post_type, News::Post::TYPE.map { |m| m }, class:'post_type form-control string optional', id:'post_type' %>
        </div>
        <div class="col-md-12">
          <%= f.input :status, collection: News::Post::STATUS, prompt: :translate %>
        </div>
        <div class="col-md-12">
            <%= f.label "Noticia destacada" %>
            <% if f.object.new_record? %>
              <%= f.check_box :important, class: 'post_type', checked: true %>
            <% else %>
              <%= f.check_box :important, class: 'post_type'%>
            <% end %>
        </div>
        <div class="col-md-12">
        </div>
        <div class="col-md-12 col-sm-12"><br>
          <div class="input-group date" id="published_at" data-target-input="nearest">
            <% if @post.try(:published_at).present? %>
              <%= f.text_field :published_at, class: 'form-control datetimepicker-input', value: @post.try(:published_at).strftime("%d-%m-%Y %H:%M"), 'data-target' => '#published_at', class:'post_published_at'%>
            <% else %>
              <%= f.text_field :published_at, class: 'form-control datetimepicker-input', 'data-target' => '#published_at', placeholder: "Fecha de publicación", label: false, class:'post_published_at' %>
            <% end %>
            <div class="input-group-append" data-target="#published_at" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <br>
          <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
    <div class="card pl-4 wrapper" >
      <input type="checkbox" id="select_all" class="form-check-input"/> <strong>Seleccionar todas</strong>
      <div class="form-group">
        <div class= 'scrollDivPost categories'>
          <%= f.association :terms, collection: @categories, as: :check_boxes, class: 'custom-control-input', label: false %>
        </div>
      </div>
    </div>
    <div class="card text-md-center p-2 wrapper" >
      <div class="form-group row ">
        <div class="col-12 col-sm-12">
          <%= f.label 'Etiquetas incluyentes' %>
          <%= select_tag :terms_names, options_for_select(General::Term.tags.map{|i| [i.name]} + General::BenefitGroup.all.map{|i| [i.name]}, f.object.terms.inclusive_tags.map(&:name)), multiple: true, class:' form-control string optional', id: 'inclusive_tag' %>
        </div>
        <div class="col-12 col-sm-12">
          <%= f.label 'Etiquetas excluyentes' %>
          <%= select_tag :terms_names, options_for_select(General::Term.tags.map{|i| [i.name]} + General::BenefitGroup.all.map{|i| [i.name]}, f.object.terms.excluding_tags.map(&:name)), multiple: true, class:' form-control string optional', id: 'excluding_tag' %>
          <div class="tip_format">Las etiquetas se seleccionan haciendo click en entrar/enter o con el botón primario del ratón/mouse</div>
        </div>
      </div>
    </div>
    <div class="card text-md-center p-2" >
      <div class="form-group">
          <div class="col-md-12 col-sm-12">
            <h5 class="card-title">Imagen principal</h5>
            <% if @post.id.nil? %>
              <%= image_tag((root_url + '/assets/post_news_mini.png'), id:'image_preview', :size => '180x120', :crop => :fill) %>
              <%= link_to 'Biblioteca de imágenes', new_admin_attachment_path(), 'data-toggle' => 'modal', 'data-target' => '#main_image_modal',id: 'main_image_nil', remote: true, class: 'card-link'%><br/>
              <b><p>Subir Imagen</p></b>
              <%= f.fields_for :main_image do |aa| %>
                <div class="">
                  <%= aa.file_field :attachment, class:'card-link', onchange:"readURL(this);" %>
                </div>
              <% end %>
            <% else %>
              <%= image_tag((root_url + '/assets/post_news_mini.png'), id:'image_preview', :size => '180x120', :crop => :fill) if @post.main_image.blank? %>
              <%= image_tag url_for(@post.main_image.attachment.variant(resize: "160x200")) if @post.main_image.present? %>
              <br />
                <%= link_to 'Imagen desde galería', new_admin_post_attachment_path(@post), 'data-toggle' => 'modal', 'data-target' => '#main_image_modal', id: 'main_image', remote: true %>
                <br />
                <b><p>Adjuntar imagen</p></b>
                <%= f.fields_for :main_image, @post.build_main_image do |aa| %>
                  <div class="">
                    <%= aa.file_field :attachment, onchange:"readURL(this);" %>
                  </div>
                <% end %>
            <% end %>
          </div>
      </div>
    </div>
    <div class="card text-md-center pt-2" >
      <div class="form-group ">
        <div class="col-md-12 col-sm-12">
          <h5 class="card-title"> Galería </h5>
          <br>
          <% if @post.id.nil? %>
            <%= link_to 'Establecer Galería', new_admin_gallery_path(), 'data-toggle' => 'modal', 'data-target' => '#gallery_modal', class:'', remote: true, id: 'gallery1' %>
          <% else %>
            <%= link_to 'Establecer Galería', new_admin_post_gallery_path(@post), 'data-toggle' => 'modal', 'data-target' => '#gallery_modal', class:'', remote: true, id: 'gallery2' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card text-md-center p-2" >
      <div class="form-group ">
        <div class="col-md-12 col-sm-12">
          <h5 class="card-title"> Formato </h5>
        </div>
          <div class="col-md-12">
            <%= f.input :format, required: true, collection: News::Post::FORMAT.map{|j,k| [k,j] },  :selected => 0, prompt: :translate %>
          <div class="tip_format">
            Estilo 1: Normal - Estilo 2: Rosado - Estilo 3: Naranja
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){
$('input,textarea').focus(function(){
  $(this).data('placeholder',$(this).attr('placeholder'))
          .attr('placeholder','');
}).blur(function(){
  $(this).attr('placeholder',$(this).data('placeholder'));
});

  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function(e) {
        $("#image_preview")
          .attr("src", e.target.result)
          .width(180)
          .height(120);
      };

      reader.readAsDataURL(input.files[0]);
    }
  }
});
</script>