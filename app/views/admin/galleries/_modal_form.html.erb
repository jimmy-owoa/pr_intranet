<div class="bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Galerías</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="tab-v2">
          <ul class="nav nav-tabs" id="tabGalleries">
            <li class="nav-item pill-tabs"><a href="#create_gallery" data-toggle="tab" id="crear_galeria">Crear Galería</a></li>
            <li class="nav-item pill-tabs"><a href="#select_galleries" data-toggle="tab" id="seleccionar_galeria">Seleccionar Galería</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane fade in " id="create_gallery">
              <br>
              <%= simple_form_for [@post, @gallery], as: 'gallery', url: {action: :create}, :html => { :class => "form" }, remote: true do |f| %>
                <%= render :partial => 'form_modal', locals: {f: f} %>
              <% end %>
            </div>

            <div class="tab-pane fade in" id="select_galleries">
              <div class="row justify-content-center">
                <div class="col-12">
                  <%= select_tag :galleries, options_for_select(map_galleries), class: 'image-picker show-html', multiple: true %>
                </div>
              </div>
              <button type="button" id="selection-galleries" class="btn btn-primary" style="float:right">Seleccionar galerías</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
