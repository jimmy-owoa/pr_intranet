$("#gallery_modal").html("<%= j render(partial: 'modal_form') %>");
$('.image-picker').imagepicker();
$('#gallery_modal').modal('show');

$("select.image-picker").imagepicker({
  hide_select: true,
  show_label: true,
  selected: function (option) {
    var values = this.val();
    $('#selection-galleries').click(function () {
      if (this.id == 'selection-galleries') {
        $('#gallery_modal').modal('toggle');
        $('#post_gallery_ids').val(values);
        if (values >= 1) {
          $('#gallery1, #gallery2').text(`Galer√≠as seleccionadas: ${values}`)
        }
        $('#gallery_modal').modal('hide');
      }
    });

  }
});

$('#attachments_ids').change(
  function(){
    if ($(this).val()) {
      $('input:submit').attr('disabled',false);
    }
  });
