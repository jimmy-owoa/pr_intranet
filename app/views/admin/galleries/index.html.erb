<%- model_class = General::Gallery -%>
  <section class="section">
    <h1 class="section-header"><%= "Galerías" %></h1>
    <%= link_to "Nueva", new_admin_gallery_path, :class => 'btn btn-primary btn-sm mb-1' %>
    <div class="card">
      <div class="table-responsive-md">
        <table class="table table-hover">
          <thead class="thead">
            <tr>
              <th><%= "Nombre" %></th>
              <th><%= "Cantidad de fotos" %></th>
              <th><%= "Fecha Creación" %></th>
              <th><%= "Acciones" %></th>
            </tr>
          </thead>
          <tbody>
            <% @galleries.each do |gallery| %>
              <tr>
                <td><%= link_to gallery.name, admin_gallery_path(gallery) %></td>
                <td><%= gallery.attachments.count %></td>
                <td><%= custom_date_no_hour(gallery.created_at) %></td>
                <td>
                  <%= link_to t('.show', :default => t("helpers.links.show")),
                              admin_gallery_path(gallery), :class => 'btn btn-success btn-sm' %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_admin_gallery_path(gallery), :class => 'btn btn-primary btn-sm' %>
                  <%= link_to 'Eliminar',
                              admin_gallery_path(gallery),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Esta segura(o) que desea eliminar este elemento?')) },
                              :class => 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </section>
