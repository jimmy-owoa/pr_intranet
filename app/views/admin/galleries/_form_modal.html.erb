<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
<div class="row ">
  <div class="col-md-12">
    <%= f.input :name, required: true %>     
  </div>
  <div class="col-md-12">
    <%= f.input :description %>
  </div>
</div>
<div class="row">
  <div class="col-md-12 pt-4" >
    <div class="container col-md-12 card scrollDiv">
      <%= file_field_tag 'attachment[attachment][]', id: "fileinputuploader2", multiple: true, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<div class="form-actions col-12">
  <%= f.button :submit, class: 'btn btn-success center'%>
</div>

<script>
var uploader = $("#fileinputuploader2");

uploader.fileinput({
  showPreview: true,
  showCaption: false,
  showUpload: false,
  uploadUrl: "/admin/attachments",
  uploadAsync: true,
  allowedFileExtensions: [
    "png",
    "jpg",
    "jpeg",
    "gif",
    "svg",
    "mp4",
    "mov",
    "ogg"
  ],
  msgInvalidFileExtension: "El archivo debe ser una imagen.",
  removeFromPreviewOnError: true,
  language: "es",
  ajaxSettings: {
    method: "POST"
  },
  browseLabel: "Subir Fotos",
  dropZoneTitle: "Arrastrar y Soltar archivos aqu√≠",
  removeLabel: "Eliminar archivos",
  previewTemplates: {},
  layoutTemplates: {
    actions: ""
  }
})
.on("filebatchselected", function(event, files) {
  uploader.fileinput("upload");
});

uploader.on("fileerror", function(event, data, msg) {
  console.log(msg);
});

uploader.on("fileuploaded", function(event, data, previewId, index) {
  console.log(data.response);
  $("<input>").attr({
      type: "hidden",
      id: "attachment_" + data.response.attachment_id,
      name: "attachments_attributes[" + data.response.attachment_id + "][id]",
      value: data.response.attachment_id
  })
  .appendTo("form");
});
</script>