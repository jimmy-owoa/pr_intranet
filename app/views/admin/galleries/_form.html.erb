<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="row justify-content-around">
  <div class="card col-md-12">
    <div class="col-md-12">
      <%= f.input :name, required: true %>
      <%= f.label :description %>
      <%= f.text_area :description, :class => "tinymce", :rows => 2 %>
      <%= tinymce %>       
    </div>
  </div>
</div>

<% unless @gallery.new_record? %>
  <div class="row justify-content-around" style='overflow-y: scroll;height: 200px;'>
    <div class="card col-md-12">
      <%= f.label "Imágenes" %>
      <%= f.select :attachment_ids, options_for_select(map_attachments), {},{ class: 'image-picker show-labels show-html', multiple: true }%>
    </div>
  </div>
  <div class="col-md-12" >
    <%# <% if @gallery.attachments.present? %>
    <% if @gallery.id != nil %>
      <div class="card">
        <h1 align="center">Imágenes de <%= @gallery.name %> </h1>
        <div class="row" style='padding: 15px'>
          <% @gallery.attachments.each do |image|%>
            <div class="col-md-3" >
              <figure>                    
                <%= image_tag(image.attachment.variant(resize: '200x150>'))%>
                <figcaption>
                  <%= link_to 'link', rails_blob_url(image.attachment), id: 'link_attachment',target: "_blank" %>
                </figcaption>
              </figure>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
<% end %>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-primary'%>
</div>