<%= f.error_notification %>
  <div class="form-group row">
    <div class="col-6">
      <%= f.input :title, required: true, autofocus: true %>
    </div>
     <div class="col-6">
      <%= f.input :description, required: true, autofocus: true %>
    </div>
     <div class="col-6">
      <%= f.input :position, required: true, autofocus: true %>
    </div>
    <div class="col-6">
      <%= f.input :url %>
    </div>
    <div class="card-body text-secondary">
      <% if @section.image.attachment.present? %>
        <%= image_tag(@section.image.variant(resize: '500x500>'), class: 'center') %>
      <% else %>  
        <img src="https://zcoin.io/wp-content/uploads/2017/01/blank-avatar-e1484377033610.png" />
      <% end %>
        <%= f.input :image, required: true, input_html: { accept:'image/*' } %>
      </div>
  </div>
<%= f.submit 'Crear Link', :class => 'btn btn-primary' %>
