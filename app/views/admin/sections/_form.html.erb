<%= f.error_notification %>
<div class="form-group row">
  <div class="col-sm-7">
    <div class="row">
      <div class="col-12 col-sm-12">
        <%= f.input :title, required: true, autofocus: true %>
      </div>
      <div class="col-12 col-sm-12">
        <%= f.input :url, required: true, input_html: { type: "text"} %>
      </div>
      <div class="col-12 col-sm-12">
        <%= f.input :position, required: true %>
      </div>
      <div class="col-12 col-sm-12">
        <%= f.input :description, required: true,  :input_html => {:rows => 10} %>
      </div>
    </div>
  </div>
  <div class="col-sm-5">
    <div class="row">
      <div class="card border-secondary mb-2">
        <div class="card-body text-secondary border border-primary rounded">
          <% if @section.image.attachment.present? %>
            <%= image_tag(@section.image.variant(resize: '300x300>'), class: 'left') %>
            <div class="left">
              <%= f.file_field :image, required: false, multiple: false, as: :file, input_html: { accept:'image/*' }, class: 'mt-2', onchange: "validateImage('section_image')" %>
            </div>
          <% else %>
            <img src="https://zcoin.io/wp-content/uploads/2017/01/blank-avatar-e1484377033610.png" alt="rss feed" />
            <div class="left">
              <%= f.file_field :image, required: true, multiple: false, as: :file, input_html: { accept:'image/*' }, class: 'mt-2', onchange: "validateImage('section_image')" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
