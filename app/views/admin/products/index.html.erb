<section class="section">
  <h1 class="section-header"><%= "Anuncios" %></h1>
  <div class="card">
    <div class="table-responsive-md">
      <table class="table table-hover">
        <thead class="thead">
          <tr>
            <th><%= "Imagen" %></th>
            <th><%= "Nombre producto" %></th>
            <th><%= "Precio" %></th>
            <th><%= "Acciones" %></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= image_tag product.thumb(product.images.first) unless product.images.first.nil?%></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td>
                <%= link_to t('.show', :default => t("helpers.links.show")), admin_product_path(product), :class => 'btn btn-default btn-xs' %>  
                <% if policy(product).edit?  %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_product_path(product), :class => 'btn btn-default btn-xs' %>
                  <%= link_to 'Deshabilitar', admin_product_path(product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-sm btn-danger' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
      </div>
    </div>
  <%= link_to "Nuevo", new_admin_product_path, :class => 'btn btn-primary' %>
  </div>
</section>
