<div class="container">
  <section class="section">
    <h2 class="section-header"><%= @product.name %></h2>
  </section>
  <div class="row title_form">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <h4>Anuncio:  <%= @product.name %></h4>
            </div>
            <div class="col-md-6">
            </div>
            <div class="col-md-2 text-right">
              <b><%= General::User.find(@product.user_id).full_name %></b>
            </div>
          </div>
          <p><strong> Precio: </strong> <%= @product.price %></p>
          <p><strong> Dirección/Oficina: </strong> <%= @product.location %></p>
          <p class="card-text">
            <b>Creado:</b> <%= custom_date(@product.created_at)%>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body"> 
          <% if @product.permitted_images.present? %>
            <h5>Imágenes Aprobadas</h5>
            <div class="row" >
              <% @product.permitted_images.each do |image| %> 
                <figure>
                  <%= image_tag image.variant(resize: '150x100>'), class: 'image_attach' %>
                </figure>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-12 text-center">
    <%= link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn btn-primary'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_product_path(@product), :class => 'btn btn-primary' %>
  </div>
</div>
