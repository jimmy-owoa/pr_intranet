<div class="container">
  <div class="row title_form">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <h4>Producto/Servicio:  <%= @product.name %></h4>
          <p><strong> Precio: </strong> <%= @product.price %></p>
          <p><strong> Direcci√≥n/Oficina: </strong> <%= @product.location %></p>
          <p class="card-text">
            <b>Creado:</b> <%= @product.created_at.strftime("%d de %B de %Y %H:%M:%S %p") %>
          </p>
          <% @product.images.each do |image| %>
            <%= image_tag image.variant(resize: '200x200') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to t('.back', :default => t("helpers.links.back")), admin_products_path, :class => 'btn btn-primary'  %>
</div>
