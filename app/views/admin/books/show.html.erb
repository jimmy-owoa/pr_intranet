<div class="container">
	<section class="section">
		<h2 class="section-header"><%= @book.title %></h2>
	</section>
	<div class="container">
		<div class="row">
			<div class="col-sm-5">
				<%= image_tag @book.image.variant(resize: '360x300>') if @book.image.attached? %><br />
			</div>
			<div class="col-sm-7">
				<div class="card post_card">
					<b>Autor: <%= @book.author.name %></b>
					<b>Editorial: <%= @book.editorial.name %></b>
					<b>Año de publicación: <%= @book.publication_year %></b>
					<b>Categoría: <%= @book.category_book.name %></b>
					<b>Unidades disponibles: <%= @book.stock %></b>
					<b>Estado: <%= @book.available ? "Disponible" : "No Disponible" %></b>
				</div>
			</div>
		</div>
		<br />
		<div class="row">
		  <div class="col-sm-12">
			<div class="card post_card">
			  <%= raw @book.description %>
			</div>
		  </div>
		</div>

		<div class="text-center">
			<%= link_to t('.back', :default => t("helpers.links.back")), admin_books_path, :class => 'btn btn-primary btn-sm'  %>
			<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_book_path(@book), :class => 'btn btn-primary btn-sm' %>
			<%= link_to 'Eliminar', admin_book_path(@book),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },:class => 'btn btn-danger btn-sm' %>
		</div>
	</div>
</div>
      