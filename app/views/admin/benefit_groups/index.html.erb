<%- model_class = General::BenefitGroup -%>
  <section class="section">
    <h1 class="section-header"><%= "Beneficios de Grupo" %></h1>
    <div class="card">
      <div class="table-responsive-md">
        <table class="table table-hover">
          <thead class="thead">
            <tr>
              <th><%= 'ID' %></th>
              <th><%= 'Código' %></th>
              <th><%= 'Nombre' %></th>
              <th><%= 'Descripción' %></th>      
              <th><%= 'Acciones' %></th>    
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <%@benefit_groups.each do |benefit_group| %>
              <tr>
                <td><%= link_to benefit_group.id, admin_benefit_group_path(benefit_group) %></td>
                <td><%= benefit_group.code %></td>
                <td><%= benefit_group.name %></td>
                <td><%= benefit_group.description %></td>
                <td><%= link_to t('.show', :default => t("helpers.benefits.show")),
                      admin_benefit_group_path(benefit_group), :class => 'btn btn-success btn-sm' %>
                </td>
                <td>
                  <%= link_to t('.edit', :default => t("helpers.benefits.edit")),
                  edit_admin_benefit_group_path(benefit_group), :class => 'btn btn-primary btn-sm' %>
                </td>
                <td>
                  <%= link_to 'Deshabilitar',
                      admin_benefit_group_path(benefit_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.benefits.confirm", :default => '¿Estás seguro??')) },
                      :class => 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
        </div>
      </div>
    <%= link_to 'New Admin Benefit Group', new_admin_benefit_group_path %>
    </div>
  </section>

