<%= f.error_notification %>
<div class="card p-4">
  <div class="row form-group">
    <div class="col-12">
      <div class="row">
        <div class="col-sm-4">
          <%= f.input :title, autofocus: true   %>
        </div>
         <div class="col-sm-4">
          <%= f.input :integration_code %>
        </div>
         <div class="col-sm-4">
        <%= f.input :link %>
      </div>
        <div class="col-sm-6">
          <% selected_value = @menu.profile_id || nil %>
          <%= f.label 'Perfilamiento' %>
          <%= f.select :profile_id, options_for_select(General::Profile.all.map{|profile| [profile.name, profile.id]}, selected_value), include_blank: true%>
        </div>
        <div class="col-sm-6">
          <%= f.label 'Padre' %>
          <%= f.select :parent_id, @grouped_options, include_blank: true%>
          <%# <%= f.select :parent_id, grouped_options_for_select(@grouped_options, nil, divider: '----------')%>
        </div>
      </div>
    </div>
  </div>
</div>
<%= f.submit nil, :class => 'btn btn-primary'%>
</div>
