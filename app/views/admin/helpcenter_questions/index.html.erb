<section class="section">
  <h1 class="section-header"><%= "Preguntas y respuestas" %></h1>
  <%= link_to "Nuevo", new_admin_helpcenter_question_path, class: 'btn btn-primary btn-sm mb-1' %>
  <div class="card">
    <div class="table-responsive-md">
      <table class="table table-hover" id="questions_table">
        <thead class="thead">
          <tr>
            <th><%= '' %></th>
            <th><%= "Nombre" %></th>
            <th><%= "Sub-categoría" %></th>
            <th><%= "Acciones" %></th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td></td>
              <td><%= question.name %></td>
              <td><%= question.subcategory.name %></td>
              <td>
                <%= link_to t("helpers.links.show"),
                              admin_helpcenter_question_path(question), :class => 'btn btn-success btn-xs' %>
                <%= link_to t("helpers.links.edit"),
                              edit_admin_helpcenter_question_path(question), :class => 'btn btn-primary btn-xs' %>
                <%= link_to t("helpers.links.destroy"),
                              admin_helpcenter_question_path(question),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.messages.confirm", :default => '¿Esta segura(o) que desea eliminar este elemento?')) },
                              :class => 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
      </div>
    </div>
  </div>
</section>
