<div class="row">
  <div class="col-md-12">
    <%= render partial: '/layouts/partials/users', locals: { user: @users } if @users.present? %>
    <%= render partial: '/layouts/partials/posts', locals: { post: @posts } if @posts.present? %>
    <%= render partial: '/layouts/partials/menus', locals: { menu: @menus } if @menus.present? %>
    <%= render partial: '/layouts/partials/benefits', locals: { menu: @benefits } if @benefits.present? %>
    <%= render partial: '/layouts/partials/galleries', locals: { menu: @galleries } if @galleries.present? %>
    <%= render partial: '/layouts/partials/surveys', locals: { menu: @surveys } if @surveys.present? %>
  <br><br>
  <% if ( @users.blank? && @posts.blank? && @menus.blank? && @benefits.blank? ) %>
    <div class="alert alert-danger" role="alert">
      <strong>Estimad@,</strong> no se han encontrado resultados en su busqueda.
    </div>
  <% end %>
  </div>
</div>
